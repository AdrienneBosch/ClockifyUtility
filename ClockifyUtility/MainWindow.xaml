<Window x:Class="ClockifyUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockifyUtility"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Generate Invoice" Width="200" Height="40" Margin="0,0,0,10" Command="{Binding GenerateInvoiceCommand}" />
            <TextBlock Text="{Binding Status}" FontSize="16" TextWrapping="Wrap" Width="400" Margin="0,0,0,10" />
            <TextBlock Text="Logs:" FontWeight="Bold" FontSize="14" Margin="0,10,0,0" />
            <TextBox Text="{Binding Log, UpdateSourceTrigger=PropertyChanged}" FontFamily="Consolas" FontSize="12" Width="600" Height="120" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </Grid>
</Window>