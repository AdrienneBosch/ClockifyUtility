<Window x:Class="ClockifyUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClockifyUtility"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox Width="300" Height="30" Margin="0,0,0,10"
                      ItemsSource="{Binding AvailableInvoiceConfigs}"
                      SelectedItem="{Binding SelectedInvoiceConfig, Mode=TwoWay}"
                      />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Set as Default" Width="120" Height="30" Margin="0,0,10,0" Command="{Binding SetDefaultInvoiceCommand}" />
                <Button Content="Generate Invoice" Width="160" Height="30" Command="{Binding GenerateInvoiceCommand}" />
            </StackPanel>
            <TextBlock Text="{Binding Status}" FontSize="16" TextWrapping="Wrap" Width="400" Margin="0,10,0,10" />
        </StackPanel>
    </Grid>
</Window>